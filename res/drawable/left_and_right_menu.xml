<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
   <item><!-- 该形状表示为整个为距形，颜色为main_color -->
        <shape android:shape="rectangle">
            <stroke 
                android:width="1dp"
                android:color="@color/me_main_color"/>
        </shape>
    </item>
    <item
        android:left="0dp"
        android:top="1dp"
        android:right="0dp"
        android:bottom="1dp"><!-- 两种效果叠加，该效果叠加到第一个效果中，同时设置了边距效果，造成一种边框的错觉 -->
        <shape android:shape="rectangle">
            <solid 
                android:color="@color/white"/>
        </shape>
    </item>
 
</layer-list>