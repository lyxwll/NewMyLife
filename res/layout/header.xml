<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_title_rl"
    android:layout_width="match_parent"
    android:layout_height="@dimen/header_height"
    android:background="@color/me_main_color"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <com.yulinoo.plat.life.ui.widget.BackWidget
        android:id="@+id/back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical" />

    <LinearLayout
        android:id="@+id/right_head"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical" >

        <FrameLayout
            android:id="@+id/good_more_function"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/btn_title_pic_onclick_color"
            android:visibility="gone" >

            <TextView
                android:id="@+id/right_img"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:background="@drawable/more_function" />
        </FrameLayout>

        <TextView
            android:id="@+id/right_text"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/tab_onclick_color"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="AAAAA"
            android:textColor="@color/white"
            android:textSize="@dimen/main_font_size"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@drawable/tab_onclick_color"
        android:gravity="center"
        android:singleLine="true"
        android:text="选择您的小区"
        android:textColor="@color/white"
        android:textSize="@dimen/header_title_font_size" />

</RelativeLayout>