<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical" >

    <include layout="@layout/header" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_color" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background_color"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="vertical" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/dialog_background"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical" >

                    <TextView
                        android:id="@+id/tv_shop_address"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="店铺地址"
                        android:textColor="@color/assist_txt_color"
                        android:textSize="@dimen/assist_font_size"
                         />

                    <TextView
                        android:id="@+id/address"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_toRightOf="@id/tv_shop_address"
                        android:drawableRight="@drawable/arrow_right"
                        android:gravity="center_vertical"
                        android:hint="请选择小区"
                        android:textColor="@color/main_txt_color"
                        android:textSize="@dimen/assist_font_size" />
                </RelativeLayout>
                <View  style="@style/HonizalLine"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical" >

                    <TextView
                        android:id="@+id/tv_shop_amap"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="店铺位置"
                        android:textColor="@color/assist_txt_color"
                        android:textSize="@dimen/assist_font_size" />

                    <TextView
                        android:id="@+id/amap"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_toRightOf="@id/tv_shop_amap"
                        android:drawableRight="@drawable/arrow_right"
                        android:gravity="center_vertical"
                        android:hint="请选择地图位置"
                        android:textColor="@color/main_txt_color"
                        android:textSize="@dimen/assist_font_size" />
                </RelativeLayout>

                <View  style="@style/HonizalLine"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical" >

                    <TextView
                        android:id="@+id/tv_shop_category"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="店铺分类"
                        android:textColor="@color/assist_txt_color"
                        android:textSize="@dimen/assist_font_size" />

                    <TextView
                        android:id="@+id/shop_category"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_toRightOf="@id/tv_shop_category"
                        android:background="@color/transparent"
                        android:drawableRight="@drawable/arrow_right"
                        android:gravity="center_vertical"
                        android:hint="选择经营类型"
                        android:textColor="@color/main_txt_color"
                        android:textSize="@dimen/assist_font_size" />
                </RelativeLayout>

                <View  style="@style/HonizalLine"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical" >

                    <TextView
                        android:id="@+id/tv_shop_name"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="@string/shop_name"
                        android:textColor="@color/assist_txt_color"
                        android:textSize="@dimen/assist_font_size" />

                    <EditText
                        android:id="@+id/shop_name"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_toRightOf="@id/tv_shop_name"
                        android:background="@color/transparent"
                        android:hint="必填"
                        android:textColor="@color/main_txt_color"
                        android:textSize="@dimen/assist_font_size" />
                </RelativeLayout>

                <View  style="@style/HonizalLine"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical" >

                    <TextView
                        android:id="@+id/tv_shop_description"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/description"
                        android:layout_alignBottom="@+id/description"
                        android:layout_alignParentLeft="true"
                        android:text="店铺简介"
                        android:textColor="@color/assist_txt_color"
                        android:textSize="@dimen/assist_font_size" />

                    <EditText
                        android:id="@+id/description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/tv_shop_description"
                        android:background="@color/transparent"
                        android:lines="3"
                        android:textColor="@color/main_txt_color"
                        android:textSize="@dimen/assist_font_size" />
                </RelativeLayout>

              <View  style="@style/HonizalLine"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical" >

                    <TextView
                        android:id="@+id/tv_shop_mobile"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/mobile"
                        android:layout_alignBottom="@+id/mobile"
                        android:layout_alignParentLeft="true"
                        android:text="联系电话"
                        android:textColor="@color/assist_txt_color"
                        android:textSize="@dimen/assist_font_size"/>

                    <EditText
                        android:id="@+id/mobile"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_toRightOf="@id/tv_shop_mobile"
                        android:background="@color/transparent"
                        android:hint="方便用户找到你"
                        android:inputType="number"
                        android:textColor="@color/main_txt_color"
                        android:textSize="@dimen/assist_font_size" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/submit"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_margin="10dp"
                    android:background="@color/me_main_color"
                    android:gravity="center"
                    android:text="提交"
                    android:textSize="@dimen/assist_font_size"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>