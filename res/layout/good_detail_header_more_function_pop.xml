<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/shadow"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:layout_marginRight="20dp"
        android:background="@color/me_main_color"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/gd_agree_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <View style="@style/HonizalLine1" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp" >

                <ImageView
                    android:id="@+id/gd_agree"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@null"
                    android:src="@drawable/agreed_white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/gd_agree"
                    android:text="点一下赞"
                    android:textColor="@color/white"
                    android:textSize="@dimen/main_font_size" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/gd_share_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <View style="@style/HonizalLine1" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp" >

                <ImageView
                    android:id="@+id/gd_share_iv"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="@null"
                    android:src="@drawable/share_white" />

                <TextView
                    android:id="@+id/gd_share_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/gd_share_iv"
                    android:text="微信分享"
                    android:textColor="@color/white"
                    android:textSize="@dimen/main_font_size" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/gd_location_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <View style="@style/HonizalLine1" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp" >

                <ImageView
                    android:id="@+id/gd_location_iv"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/addr_white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/gd_location_iv"
                    android:text="位置地图"
                    android:textColor="@color/white"
                    android:textSize="@dimen/main_font_size" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/gd_phone_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <View style="@style/HonizalLine1" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp" >

                <ImageView
                    android:id="@+id/gd_phone_iv"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/telphone_white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/gd_phone_iv"
                    android:text="联系一下"
                    android:textColor="@color/white"
                    android:textSize="@dimen/main_font_size" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/gd_private_message_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <View style="@style/HonizalLine1" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp" >

                <ImageView
                    android:id="@+id/gd_private_message_iv"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/msg_white" />

                <TextView
                    android:id="@+id/gd_private_message_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/gd_private_message_iv"
                    android:text="发送私信"
                    android:textColor="@color/white"
                    android:textSize="@dimen/main_font_size" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/gd_focus_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <View style="@style/HonizalLine1" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:paddingLeft="50dp"
                android:paddingRight="30dp" >

                <TextView
                    android:id="@+id/gd_focus_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/add_concern"
                    android:textColor="@color/white"
                    android:textSize="@dimen/main_font_size" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>