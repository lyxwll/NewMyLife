    <TextView 
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        />

    <RelativeLayout
        android:id="@+id/menu_concern"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/menu_concern_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:text="关注"
            android:textColor="@color/black"
            android:textSize="@dimen/menu_size" />

        <ImageView
            android:id="@+id/menu_concern_redHot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/menu_concern_txt"
            android:contentDescription="@null"
            android:src="@drawable/hd" 
            android:visibility="gone"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/menu_neighbourtalk"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/menu_neighbourtalk_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:text="邻语"
            android:textColor="@color/black"
            android:textSize="@dimen/menu_size" />

        <ImageView
            android:id="@+id/menu_neighbourtalk_redHot"
