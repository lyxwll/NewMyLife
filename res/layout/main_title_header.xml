<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_title_rl"
    android:layout_width="match_parent"
    android:layout_height="@dimen/header_height"
    android:background="@color/me_main_color"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/go_search_rl"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical|left"
        android:background="@drawable/btn_title_pic_onclick_color" >

        <ImageView
            android:id="@+id/go_search_iv"
            android:layout_width="20dp"
            android:layout_marginLeft="10dp"
            android:layout_height="20dp"
            android:contentDescription="@null"
            android:src="@drawable/search_40" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/more_function"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/btn_title_pic_onclick_color" >

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="10dp"
            android:contentDescription="@null"
            android:src="@drawable/more_function" />
    </FrameLayout>

    <TextView
        android:id="@+id/mktitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:drawablePadding="3dp"
        android:drawableRight="@drawable/down_arrows"
        android:gravity="center"
        android:text="选择您的小区"
        android:textColor="@color/white"
        android:textSize="@dimen/header_title_font_size" />

</RelativeLayout>