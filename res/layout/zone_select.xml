<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical" >

    <include layout="@layout/header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/click_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/zone_select_border_unfocus"
            android:gravity="center"
            android:padding="5dp" >

            <TextView
                android:id="@+id/city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择城市"
                android:textColor="@color/main_txt_color"
                android:textSize="14sp" />

            <TextView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/down_arrows" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/click_district"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/zone_select_border_unfocus"
            android:gravity="center"
            android:padding="5dp" >

            <TextView
                android:id="@+id/distinct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择区(县)"
                android:textColor="@color/main_txt_color"
                android:textSize="14sp" />

            <TextView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/down_arrows" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/click_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/zone_select_border_unfocus"
            android:gravity="center"
            android:padding="5dp" >

            <TextView
                android:id="@+id/area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择小区"
                android:textColor="@color/main_txt_color"
                android:textSize="14sp" />

            <TextView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/down_arrows" />
        </RelativeLayout>
    </LinearLayout>

    <include layout="@layout/keypad" />

    <com.yulinoo.plat.life.ui.widget.listview.XListView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="#00000000"
        android:scrollbars="none" />

</LinearLayout>