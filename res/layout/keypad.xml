            android:id="@+id/zmx"
            style="@style/key_pad_style"
            android:text="x" />

        <TextView
            android:id="@+id/zmc"
            style="@style/key_pad_style"
            android:text="c" />

        <TextView
            android:id="@+id/zmv"
            style="@style/key_pad_style"
            android:text="v" />

        <TextView
            android:id="@+id/zmb"
            style="@style/key_pad_style"
            android:text="b" />

        <TextView
            android:id="@+id/zmn"
            style="@style/key_pad_style"
            android:text="n" />

        <TextView
            android:id="@+id/zmm"
            style="@style/key_pad_style"
            android:text="m" />

        <FrameLayout
            android:id="@+id/del_zm"
            style="@style/key_pad_style" >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/del_pinyin" />
        </FrameLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/pyszm"
        style="@style/key_pad_style"
        android:layout_width="268dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="2dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/pyszm"
        />

