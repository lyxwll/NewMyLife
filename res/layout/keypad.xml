        <TextView
            android:id="@+id/zmh"
            style="@style/key_pad_style"
            android:text="h" />

        <TextView
            android:id="@+id/zmj"
            style="@style/key_pad_style"
            android:text="j" />

        <TextView
            android:id="@+id/zmk"
            style="@style/key_pad_style"
            android:text="k" />

        <TextView
            android:id="@+id/zml"
            style="@style/key_pad_style"
            android:text="l" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
